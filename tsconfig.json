{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "inputFiles": ["./src/services"]
  }
}
