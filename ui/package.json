{
  "name": "@holochain-open-dev/file-storage",
  "version": "0.400.0-dev.1",
  "description": "File storage utilities to store and retrieve files in a holochain DHT",
  "author": "guillem.cordoba@gmail.com",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*"
  },
  "files": ["dist", "src"],
  "scripts": {
    "start": "vite --clearScreen false --port $UI_PORT",
    "build": "npm run lint && tsc",
    "lint": "eslint --ext .ts,.html src --ignore-path .gitignore",
    "analyze": "cem analyze --litelement --exclude dist",
    "format": "eslint --ext .ts,.html src --fix --ignore-path .gitignore",
    "prepare": "tsc"
  },
  "dependencies": {
    "@holochain-open-dev/elements": "^0.400.0-dev.0",
    "@holochain-open-dev/utils": "^0.400.0-dev.0",
    "@holochain/client": "^0.18.0-dev.1",
    "@lit-labs/task": "^2.0.0",
    "@lit/context": "^1.0.0",
    "@lit/localize": "^0.12.0",
    "@scoped-elements/dropzone": "^0.2.1",
    "@shoelace-style/shoelace": "^2.11.0",
    "idb-keyval": "^6.2.1",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@open-wc/eslint-config": "^2.0.0",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "14.11.1",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "concurrently": "^5.1.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "tslib": "^2.0.0",
    "typescript": "^4.9.0",
    "vite": "^4.0.4",
    "vite-plugin-checker": "^0.5.3"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "type": "module"
}
